<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao03Activity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editnumero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite um número"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editnumero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite outro número"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editnumero3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite mais um número"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonOrdenar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordenar" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>